{
  "manifest_version": 3,
  "name": "Fiverr Gig Title Reader",
  "version": "0.3.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "host_permissions": ["https://www.fiverr.com/*", "https://*.supabase.co/*", "https://*.supabase.io/*"],
  "web_accessible_resources": [
    {
      "resources": ["state.js", "gig_scraper.js"],
      "matches": ["https://www.fiverr.com/*"]
    }
  ]
}

